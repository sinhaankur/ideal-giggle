{
  "name": "ai-companion-app",
  "version": "1.0.0",
  "description": "AI Companion - On-Device AI with React Frontend and Node.js Backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "frontend:dev": "cd src/frontend && npm run dev",
    "frontend:build": "cd src/frontend && npm run build",
    "install-all": "npm install && cd src/frontend && npm install",
    "build": "npm run frontend:build"
  },
  "keywords": [
    "ai",
    "companion",
    "ollama",
    "chatbot",
    "emotion-detection",
    "privacy-first"
  ],
  "author": "AI Companion Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "express-session": "^1.17.3",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "vite": "^5.0.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
